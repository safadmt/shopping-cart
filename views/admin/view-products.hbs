<section class="section-admin">
  <div class="container">
    <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
<table class="table mt-5" style="width: 900px;">
  <thead>
    <tr class="info">
      <th scope="col">Number</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ml-5">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger ml-5" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</div>
</div>
</section>
<style>
  .info{
    width: 400px;
    background-color: aquamarine;
}

</style>
