<section>
        <div class="container">
            <div class="row">
                {{#each products}}
                <div class="col-md-3" >
                    <div class="card mt-4   " style="width: 14rem; height: 25rem">
                        <img class="card-img-top"
                            style="height: 12rem"
                            src="/product-images/{{this.product._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                            <p class="card-text">Rs: {{this.product.Price}}</p>
                            <p class="card-text">Quantity: {{this.quantity}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>